# --- REQUIRED API KEYS ---

# Groq API Key (Primary LLM)
# Get from: https://console.groq.com/keys
GROQ_API_KEY=gsk_your_key_here

# Tavily API Key (Web Search Tool)
# Get from: https://tavily.com/
TAVILY_API_KEY=tvly-your_key_here


# --- OPTIONAL API KEYS ---

# OpenAI API Key (Only if using OpenAI for embeddings)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_key_here


# --- VECTOR DATABASE SETTINGS ---

# QDRANT_URL=http://qdrant:6333 (Default for Docker)
# QDRANT_URL= (Leave blank for In-Memory mode)
QDRANT_URL=http://localhost:6333

# QDRANT_API_KEY= (Only needed for Qdrant Cloud Cluster)
QDRANT_API_KEY=


# --- PROVIDER SETTINGS ---

# LLM_PROVIDER options: groq, openai (Default: groq)
LLM_PROVIDER=groq

# EMBEDDING_PROVIDER options: local, openai (Default: local)
EMBEDDING_PROVIDER=local

# USE_INTELLIGENT_CHUNKING options: True, False (Default: False)
USE_INTELLIGENT_CHUNKING=False